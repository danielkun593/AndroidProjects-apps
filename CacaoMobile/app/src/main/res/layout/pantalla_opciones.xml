<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:padding="50dp"
    tools:context=".PantallaOpciones">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_cacaologin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione una opcion:"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_opcion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:icon="@drawable/ic_aniadir_registro"
        app:iconGravity="start"
        app:iconPadding="10dp"
        app:iconSize="30dp"
        android:text="Registro de tratamiento"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_opcion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Ver lista de registros"
        android:gravity="center"
        app:icon="@drawable/ic_visualizar_lista"
        app:iconGravity="start"
        app:iconPadding="10dp"
        app:iconSize="30dp"/>

</LinearLayout>